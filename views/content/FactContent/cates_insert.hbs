<h2 class="ml-3 pl-3">Categories Of Fact</h2>
<div class="container my-3 w-50 bg-light p-3">
    <h3>{{viewTitle}}</h3>
    <a href="/catefact/" class="btn btn-outline-secondary mb-2">
        <i class="fas fa-server"></i> View all 
    </a>

    <form action="/catefact/create" method="POST">
        <input type="hidden" name="_id" value="{{catefact._id}}">

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name" value="{{catefact.name}}">
            <div class="text-danger">{{catefact.nameErr}}</div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i> Go
            </button>
        </div>
    </form>
</div>
